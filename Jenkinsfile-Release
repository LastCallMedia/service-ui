pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        script {
          sh 'docker build -t $REGISTRY/reportportal:$VERSION . --no-cache'
        }
      }
    }

    stage('Push') {
      steps {
        script {
          sh 'docker push $REGISTRY/reportportal:$VERSION'
        }
      }
    }

    stage('Cleanup') {
      steps {
        script {
          sh 'docker rmi $REGISTRY/reportportal:$VERSION'
        }
      }
    }
  }
}
